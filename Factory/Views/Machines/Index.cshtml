@{
    Layout = "_Layout";
}

@using Factory.Models
@model List<Factory.Models.Machine>;

<h1>Machine Roster</h1>

@if (@Model.Count == 0)
{
    <h3>No machines are currently operating</h3>
}

<ul>
@foreach(Machine machine in Model)
{
    <li>@Html.ActionLink($"{machine.MachineName}", "Details", new { id = machine.MachineId})</li>
}
</ul>

<p>@Html.ActionLink("Add Machine", "Create")</p>
<p>@Html.ActionLink("Back to Home", "Index", "Home")</p>