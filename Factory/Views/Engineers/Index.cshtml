@{
    Layout = "_Layout";
}

@using Factory.Models;
@model List<Factory.Models.Engineer>;

<h1>Engineers</h1>

@if(@Model.Count == 0)
{
    <p>There are currently no engineers hired</p>
}

<ul>
@foreach(Engineer engineer in Model)
{
    <li>engineer.Name</li>
}
</ul>

<p>@Html.ActionLink("Add a new hire", "Create")</p>
<p>@Html.ActionLink("Back to home", "Index", "Home")</p>