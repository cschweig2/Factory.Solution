@{
    Layout = "_Layout";
}

@using Factory.Models;
@model List<Factory.Models.Engineer>;

<h1>Engineers</h1>

@if (@Model.Count == 0)
{
    <p>Therse are currently no engineers hired</p>
}

<ul>
@foreach(Engineer engineer in Model)
{
    <li>@Html.ActionLink($"{engineer.EngineerName}", "Details", new { id = engineer.EngineerId})</li>
}
</ul>

<p>@Html.ActionLink("Add A New Hire", "Create")</p>
<p>@Html.ActionLink("Back to Home", "Index", "Home")</p>