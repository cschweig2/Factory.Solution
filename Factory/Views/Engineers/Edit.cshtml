@{
    Layout = "_Layout";
}

@model Factory.Models.Engineer

<h1>Edit Engineer Information</h1>
<h3>Engineer Name: @Html.DisplayFor(model => model.EngineerName)</h3>

@using (Html.BeginForm())
{
    @Html.HiddenFor(model => model.EngineerId)

    @Html.LabelFor(model => model.EngineerName)
    @Html.TextBoxFor(model => model.EngineerName)

    @Html.LabelFor(model => model.License)
    @Html.TextBoxFor(model => model.License)

    <input type="submit" value="Save">
}
<p>@Html.ActionLink("Back to Engineer Roster", "Index")</p>
<p>@Html.ActionLink("Back to Home", "Index", "Home")</p>