@{
    Layout = "_Layout";
}

@model Factory.Models.Engineer

<h1>Add a Machine to this Engineer</h1>
<h3>Machine Name: @Html.DisplayFor(model => model.EngineerName)</h3>

@using (Html.BeginForm())
{
    @Html.HiddenFor(model => model.EngineerId)

    @Html.Label("Select Machine: ")
    @Html.DropDownList("MachineId")

    <input type="submit" value="Save">
}

<p>@Html.ActionLink("Back to Engineer Roster", "Index")</p>
<p>@Html.ActionLink("Back to Home", "Index", "Home")</p>